#include <stdio.h>

int main() {
    char estado1, estado2;
    char codcarta1[4], codcarta2[4], nomeCidade1[50], nomeCidade2[50];
    int populacao1, populacao2, Pturisticos1, Pturisticos2;
    float area1, area2, pib1, pib2;
    float dpopulacional1, dpopulacional2, PerCapita1, PerCapita2;
    float superpoder;

    // Leitura dos dados da primeira carta
    printf("Digite o estado (A-B): ");
    scanf(" %c", &estado1); // Space before %c to consume leftover newline
    printf("Digite o codigo da carta: ");
    scanf("%s", codcarta1);
    printf("Digite o nome da cidade: ");
    scanf("%s", nomeCidade1);
    printf("Digite a populacao: ");
    scanf("%d", &populacao1);
    printf("Digite a area da cidade (km²): ");
    scanf("%f", &area1);
    printf("Digite o PIB (bilhoes de reais): ");
    scanf("%f", &pib1);
    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &Pturisticos1);

    // Leitura dos dados da segunda carta
    printf("Digite o estado (A-B): ");
    scanf(" %c", &estado2); // Space before %c to consume leftover newline
    printf("Digite o codigo da carta: ");
    scanf("%s", codcarta2);
    printf("Digite o nome da cidade: ");
    scanf("%s", nomeCidade2);
    printf("Digite a populacao: ");
    scanf("%d", &populacao2);
    printf("Digite a area da cidade (km²): ");
    scanf("%f", &area2);
    printf("Digite o PIB (bilhoes de reais): ");
    scanf("%f", &pib2);
    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &Pturisticos2);

    // Cálculo dos dados da primeira carta
    dpopulacional1 = (area1 != 0) ? populacao1 / area1 : 0;
    PerCapita1 = (populacao1 != 0) ? pib1 / populacao1 : 0;

    // Cálculo dos dados da segunda carta
    dpopulacional2 = (area2 != 0) ? populacao2 / area2 : 0;
    PerCapita2 = (populacao2 != 0) ? pib2 / populacao2 : 0;

    // Cálculo do superpoder
    superpoder = ((dpopulacional2 != 0 ? dpopulacional1 / dpopulacional2 : 0) +
                  (PerCapita2 != 0 ? PerCapita1 / PerCapita2 : 0) +
                  (Pturisticos2 != 0 ? (float)Pturisticos1 / Pturisticos2 : 0)) / 3;

    // Exibindo os resultados da primeira carta
    printf("\nDados da primeira cidade:\n");
    printf("Codigo da carta: %s\n", codcarta1);
    printf("Estado: %c\n", estado1);
    printf("Nome da cidade: %s\n", nomeCidade1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Densidade populacional: %.2f habitantes por km²\n", dpopulacional1);
    printf("PIB per capita: %.2f bilhões de reais por habitante\n", PerCapita1);
    printf("Pontos turísticos: %d\n", Pturisticos1);

    // Exibindo os resultados da segunda carta
    printf("\nDados da segunda cidade:\n");
    printf("Codigo da carta: %s\n", codcarta2);
    printf("Estado: %c\n", estado2);
    printf("Nome da cidade: %s\n", nomeCidade2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Densidade populacional: %.2f habitantes por km²\n", dpopulacional2);
    printf("PIB per capita: %.2f bilhões de reais por habitante\n", PerCapita2);
    printf("Pontos turísticos: %d\n", Pturisticos2);

    // Exibindo o superpoder calculado
    printf("\nSuperpoder: %.2f\n", superpoder);

    return 0;
}
